<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize"
        android:layout_margin="6dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
                android:layout_marginTop="12dp"
                android:text="Goblin Cave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/goblin_cave_button" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/goblin_cave_layout"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                        android:text="Goblin: Lvl 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/monster_name_textview"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/drop_table_button" />

                <Button
                        android:text="Drop Table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/drop_table_button"
                        android:layout_weight="2"
                        app:layout_constraintStart_toEndOf="@+id/monster_name_textview"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/fight_button" />

                <Button
                        android:text="Fight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fight_button"
                        android:layout_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/drop_table_button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
