<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Background color -->
            <corners android:radius="6dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Secondary Progress Layer (Optional) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#B0C4DE" /> <!-- Secondary progress color -->
                <corners android:radius="6dp" /> <!-- Rounded corners -->
            </shape>
        </clip>
    </item>

    <!-- Progress Layer -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FF0000" /> <!-- Progress color -->
                <corners android:radius="6dp" /> <!-- Rounded corners -->
            </shape>
        </clip>
    </item>
</layer-list>
