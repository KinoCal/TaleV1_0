<!-- res/drawable/rounded_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#C4BCBC" /> <!-- Replace with your desired color -->

    <!-- Rounded corners -->
    <corners android:radius="26dp" /> <!-- Adjust radius as needed for roundness -->

    <!-- Optional: border/stroke -->
    <stroke android:width="2dp" android:color="#000000" /> <!-- Border color and width -->
</shape>
